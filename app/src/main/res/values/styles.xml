        <item name="lightText">@color/white</item>
        <item name="iconColor">@color/gray</item>
        <item name="pageBgr">@color/gray</item>
    </style>

    <!-- Base application theme. -->
    <style name="GreenTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="android:navigationBarColor">@color/green</item>
